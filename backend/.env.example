# ePayco Configuration
EPAYCO_PUBLIC_KEY=your_public_key_here
EPAYCO_PRIVATE_KEY=your_private_key_here

# API Configuration
PORT=3001
NODE_ENV=development

# Domain Configuration
# Base URL del backend (usado para webhook de confirmación)
BACKEND_URL=http://localhost:3001

# Response URL - URL donde ePayco redirigirá después del pago
# Esta debe ser la URL de tu frontend que mostrará el resultado
RESPONSE_URL=http://localhost:3002/transaction-result.html

# ePayco API URLs
EPAYCO_LOGIN_URL=https://apify.epayco.co/login
EPAYCO_SESSION_URL=https://apify.epayco.co/payment/session/create
EPAYCO_TRANSACTION_URL=https://secure.epayco.co/validation/v1/reference
